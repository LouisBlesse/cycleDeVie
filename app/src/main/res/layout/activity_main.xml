<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_principal"
        android:layout_width="700px"
        android:layout_height="300px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300px"
        android:text="0:0:0"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/start"
        android:layout_width="250px"
        android:layout_height="150px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="450dp"
        android:background="#710202"
        android:textColor="#C3ADAD"
        android:onClick="onStartCount"
        android:text="start" />

    <Button
        android:id="@+id/pause"
        android:layout_width="250px"
        android:layout_height="150px"
        android:text="pause"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="400px"
        android:onClick="onStopCount"
        android:background="#710202"
        android:textColor="#C3ADAD"
        />

    <Button
        android:id="@+id/reset"
        android:layout_width="250px"
        android:layout_height="150px"
        android:text="reset"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="750px"
        android:onClick="onResetCount"
        android:background="#710202"
        android:textColor="#C3ADAD"/>

    <ProgressBar
        android:id="@+id/progress_bar_sec"
        style="?android:attr/progressBarStyleHorizontal"
        android:background="@drawable/circular_shape"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:textAlignment="center"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginTop="700px"

        android:layout_gravity="center_horizontal"
        android:max="60" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progress_bar_min"
        android:background="@drawable/circular_shape"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar_min"
        android:textAlignment="center"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_marginTop="650px"
        android:layout_gravity="center_horizontal"
        android:max="60"
/>

    <ProgressBar
        android:id="@+id/progress_bar_heure"
        style="?android:attr/progressBarStyleHorizontal"
        android:background="@drawable/circular_shape"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar_heu"
        android:textAlignment="center"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_marginTop="600px"
        android:layout_gravity="center_horizontal"
        android:max="24" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>

